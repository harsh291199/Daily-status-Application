<div class="col-15">
  <div class= "">
    <div class="nested-fields shadow p-3 mb-3 bg-light rounded">
    <div class="row mb-3 fw-bold">
      <%= f.label :task_name, class: "col-sm-2 col-form-label text-dark" %>
        <div class="col-sm-10">
          <%= f.text_field :task_name, class: "form-control shadow rounded", placeholder: "Name of the task" %>
        </div>
      </div>
  
      <div class="row mb-3 fw-bold">
        <%= f.label :pr_links, class: "col-sm-2 col-form-label text-dark" %>
        <div class="col-sm-10">
          <%= f.text_field :pr_links, class: "form-control shadow rounded", placeholder: "Github PR of task" %>
        </div>
      </div>

      <div class="row mb-3 fw-bold">
        <%= f.label :hours, class: "col-sm-2 col-form-label text-dark" %>
        <div class="col-sm-10">
          <%= f.number_field :hours, class: "form-control shadow rounded", placeholder: "Hours of the task" %>
        </div>
      </div>
  
      <div class="d-flex justify-content-center">
        <%= link_to_remove_association "Delete", f, class:"btn btn-outline-danger ms-3" %>
      </div>
    </div>
  </div>
</div>

