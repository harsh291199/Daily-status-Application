<h1 class="text-center mt-4">Status History</h1>

<h3 class="text-center mt-4">Total statuses: <%= @statuses.count %></h3>

<div class="flickr_pagination mt-3 mb-4">
  <%= will_paginate @statuses, :container => false %>
</div>

<div class="table-responsive">
  <table style="width:70%" class="table table-light table-hover center text-center">
    <tr class="table-dark text-center">
      <th>Date</th>
      <th>Action</th>
    </tr>
    <% @statuses.each do |status| %>
    <tr>
      <td><%= status.date.strftime('%d/%m/%Y') %></td>
      <td><%= link_to 'View', status_path(status), class:"btn btn-outline-primary" %></td>
    </tr>
    <% end %>
  </table>
</div>


<div class="flickr_pagination mb-4">
  <%= will_paginate @statuses, :container => false %>
</div>

<div class="d-flex justify-content-center">
  <%= link_to 'Home page', root_path, class: "btn btn-outline-dark mb-3" %>
</div>
