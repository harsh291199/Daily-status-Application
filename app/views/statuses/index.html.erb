<h1 class="text-center mt-4">Status History</h1>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<div class="table-responsive">
<table style="width:70%" class="table table-light table-hover center">
  <tr class="table-dark text-center">
    <th>Date</th>
    <th>Tasks</th> 
    <th>PR Links</th>
    <th>Hours</th>
    <th colspan="3">Actions</th>
  </tr>
    <% @statuses.each do |status| %>
    <tr>
      <td><%= l status.date %></td>
      <td><%= status.tasks %></td>
      <td><%= status.pr_links %></td> 
      <td><%= status.hours %></td>
      <td>
        <%= link_to 'EDIT', edit_status_path(status), class:"btn btn-outline-primary" %>
        <%= link_to 'DELETE', statuses_path(status), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-outline-danger" %>
      </td>
    </tr>
    <% end %>
</table>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>

<div class="d-flex justify-content-center">
  <%= link_to 'Home page', root_path, class: "btn btn-outline-dark" %>
</div>



