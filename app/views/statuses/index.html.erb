<h1 class="text-center mt-4">Status History</h1>

<div class="flickr_pagination mb-3">
  <%= will_paginate @statuses, :container => false %>
</div>

<% @statuses.each do |status| %>
  <h3 class="text-center"><%= link_to status.date, status_path(status), class:"text-decoration-none text-dark" %></h3>
<div class="table-responsive">
<table style="width:70%" class="table table-light table-hover center">
  <tr class="table-dark text-center">
    <th colspan="3">Tasks</th>
    <th colspan="3">PR Links</th>
    <th>Hours</th>
  </tr>

  <% status.tasks.each do |task| %>
  <tr class="text-center">
    <td colspan="3"><%= task.task_name %></td>
    <td colspan="3"><%= task.pr_links %></td>
    <td><%= task.hours %></td>
  <% end %>
  </tr>
</table>
</div>
<div class="d-flex justify-content-center">
  <%= link_to 'EDIT', edit_status_path(status), class:"btn btn-outline-primary mb-3" %>
  <%= link_to 'DELETE', status_path(status), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-outline-danger ms-2 mb-3" %>
</div>
<% end %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @statuses, :container => false %>
</div>

<div class="d-flex justify-content-center">
  <%= link_to 'Home page', root_path, class: "btn btn-outline-dark mb-3" %>
</div>



