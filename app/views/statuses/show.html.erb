<h2 class="text-center mt-4">Subject Line: Status update for <%= @status.date %></h2>
<h3 class="text-center mt-4">Here is the Status update</h3>
<div class="table-responsive">
  <table style="width:70%" class="table table-light table-hover center">
    <tr class="table-dark text-center">
      <th>Tasks</th>
      <th>PR Links</th>
      <th>Hours</th>
    </tr>
    
    <% @tasks.each do |task| %>
    <tr class="text-center">
      <td><%= task.task_name %></td>
      <td><%= task.pr_links %></td>
      <td><%= task.hours %></td>
    <% end %>
    </tr>
  </table>
</div>

<div class="d-flex justify-content-center">
  <%= link_to 'Home page', root_path, class: "btn btn-outline-dark mb-3" %>
  <%= link_to "Status History", statuses_path, class: "btn btn-outline-dark mb-3 ms-2"%>
</div>
